<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/pick_btn"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/gouin_green"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:onClick="pickLocation"
        android:text="HARVEST"
        android:textColor="@color/textGreen"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/inv_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/medtronicBlue"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:onClick="viewInventory"
        android:text="VIEW INVENTORY"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

</LinearLayout>